{
    on_demand_tls {
        ask http://localhost:8080/
    }
}

http://localhost:8080 {
    @query_domain_matcher {
        query domain={$DOMAIN}
    }

    respond @query_domain_matcher 200 {
    }
}

https://{$DOMAIN} {
    root * /app/public
    php_fastcgi * app:9000

    tls {$TLS_INTERNAL} {
        on_demand
    }

    log {
        output file /dev/stdout
    }
}
